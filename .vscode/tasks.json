{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "make clean && make -j",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group":
      {
        "isDefault": true,
        "kind": "build"
      },
      "detail": "compiler: /usr/bin/g++"
    }
  ]
}